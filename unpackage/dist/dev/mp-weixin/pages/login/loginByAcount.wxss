.login-acount {
  padding-top: 200rpx;
}
.login-acount view {
  margin: 80rpx auto;
  width: 80%;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.login-acount view uni-input {
  width: 80%;
  border-bottom: 2rpx solid #666666;
  height: 60rpx;
}
.login-acount view button {
  font-size: 40rpx;
  letter-spacing: 4rpx;
  color: #666666;
}
.login-acount view .active {
  background-color: #007aff;
  color: #FFFFFF;
}
.login-acount .pwd {
  position: relative;
}
.login-acount .pwd .eyePwd {
  position: absolute;
  right: 45rpx;
  font-family: uniicons;
  font-size: 24px;
  font-weight: normal;
  font-style: normal;
  width: 24px;
  height: 24px;
  line-height: 24px;
  color: #999999;
}
.login-acount .pwd .uni-eye-active {
  color: #007AFF;
}
.user-input {
  height: 100%;
  border-bottom: 2rpx solid #666666;
  height: 120rpx;
}

